{% extends ':Front:base.html.twig' %}
{% block title %}
    PanameWorldTV - Gallerie
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body%}

<div class="row">

    <div class="col-lg-12">
        <h1 class="page-header">Galerie</h1>
        <a class="btn btn-primary" href="{{ path('gallery_add')}}">Ajouter</a>
    </div>
    {% for image in gallery %}
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
        <a class="thumbnail" href="#">
            <img class="img-responsive" src="{{ asset('gallery/'~ image.imageName)}}" alt="">
            <a class="btn btn-warning" href="{{ path('gallery_update',{'id':image.id}) }}">Modifier</a>
            <a class="btn btn-danger" href="{{ path('gallery_remove',{'id':image.id}) }}">Supprimer</a>
        </a>
    </div>
    {% endfor %}
</div>

{% endblock %}
