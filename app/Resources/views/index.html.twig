{% extends '::base.html.twig' %}
{%  block title %}
    PanameWorldTV - Accueil
{% endblock %}
{% block stylesheets%}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/app/css/font-awesome.css')}}" />
{% endblock %}
{% block body %}
    <div class="container-fluid" id="background">
        <div class="row">
            <div class="col-lg-12 text-center" id="text_home">
                <h1>
                    <span class="letter5">PANAMEWORLD</span><span class="red">TV</span>
                </h1>
            </div>
            <nav class="navbar navbar-inverse col-lg-offset-3 col-lg-6">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="#realisations">Nos Réalisations</a></li>
                            <li><a href="#contact">Contact</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
            <p class="col-lg-offset-3 col-lg-6 title">À la une</p>
            <div id="myCarousel" class="carousel slide col-lg-offset-3 col-lg-6" data-ride="carousel">
                <!-- Indicators -->
                {#<ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                    <li data-target="#myCarousel" data-slide-to="4"></li>
                </ol>#}

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    {% for video in videos %}
                        {% if loop.index0 == 0 %}
                            <div class="item active text-center">
                                <iframe width="480" height="240" src="{{ video.youtubeId }}"></iframe>
                                {#<div class="carousel-caption">
                                    <h3>Chania</h3>

                                </div>#}
                            </div>
                        {% else %}
                            <div class="item text-center">
                                <iframe width="480" height="240" src="{{ video.youtubeId }}"></iframe>
                                {#<div class="carousel-caption">
                                    <h3>Chania</h3>

                                </div>#}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <br><br>
                <br><br>
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="col-lg-12">
                <p class="col-lg-offset-2 col-lg-8 title" id="#realisations">Nos réalisations</p>
                <div class="col-lg-offset-2 col-lg-8">
                    {% for video in videos %}
                        <div class="col-lg-4">
                            <div class="embed-responsive embed-responsive-16by9">
                                <iframe class="embed-responsive-item" src="{{ video.youtubeId }}"></iframe>
                            </div>
                        </div>
                    {% endfor %}

                    {# <div class="col-lg-4">
                         <div class="embed-responsive embed-responsive-16by9">
                             <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/XGSy3_Czz8k"></iframe>
                         </div>
                     </div>
                     <div class="col-lg-4">
                         <div class="embed-responsive embed-responsive-16by9">
                             <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/XGSy3_Czz8k"></iframe>
                         </div>
                     </div>
                     <div class="col-lg-4">
                         <div class="embed-responsive embed-responsive-16by9">
                             <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/XGSy3_Czz8k"></iframe>
                         </div>
                     </div>#}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-offset-1 col-lg-10 text-center" id="contact">
                <h2>Contact</h2>
            </div>
            <div class="col-lg-4 text-center give-padding-2">
                <a class="container_sm" href="https://www.facebook.com/Panameworldtv/" target="_blank">
                    <span class="fa fa-inverse fa-facebook-square fa-3x"></span> <p class="social-media">Panameworldtv</p>
                </a>
            </div>
            <div class="col-lg-4 text-center give-padding-2">
                <a class="container_sm" href="https://twitter.com/panameworldtv" target="_blank">
                    <span class="fa fa-inverse fa-twitter-square fa-3x"></span> <p class="social-media">@panameworldtv</p>
                </a>

            </div>
            <div class="col-lg-4 text-center give-padding-2">
                <a class="container_sm" href="https://www.instagram.com/panameworldtv/?hl=fr" target="_blank">
                    <span class="fa fa-inverse fa-instagram fa-3x"></span> <p class="social-media">@panameworldtv</p>
                </a>
            </div>

        </div>
        <footer class="navbar-fixed-bottom" id="footer_home">
            <div class="col-lg-6">
                <p>Abonnez-vous à notre newsletter pour rester informer de nos réalisations.<br> En cochant la case "Recevoir nos offres", vous acceptez de recevoir des offres sur les prestations de PanameWorldTV.</p>
            </div>
            <div class="col-lg-6">
                {{ form_start(
                form_create,
                {   'method': 'post',
                    'action': path('home'),
                    'attr': {
                    'class':'form-inline',
                    'id':'form_create',
                    'autocomplete':'off'}
                }
                ) }}
                {{ form_label(form_create.email,"Adresse mail") }}
                {{ form_widget(form_create.email, {'attr':{'class':'form-control margin-right'}})}}

                {{ form_label(form_create.offers,"Recevoir nos offres") }}
                {{ form_widget(form_create.offers, {'attr':{'class':'form-control margin-right'}})}}


                {{ form_widget(form_create.save,{'attr':{'class':'btn btn-danger '}})}}

                {{ form_end(form_create) }}
            </div>
        </footer>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/css/js/bootstrap.min.js') }}"></script>
{% endblock %}